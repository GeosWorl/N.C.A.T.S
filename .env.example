# Environment Variables for Smart Contract Deployment and Flask Application
# Copy this file to .env and fill in your values

# Smart Contract Configuration
# Private key for the deploying account (without 0x prefix)
# IMPORTANT: Never commit your actual private key to version control
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Contract party addresses
BORROWER_ADDRESS=0xAf227Cf67c13B54246B5220608fee8ee000Dbe53
LENDER_ADDRESS=0xAf227Cf67c13B54246B5220608fee8ee000Dbe53
CONTRACT_ADDRESS=0x721ED067e04dC811c94c9A0C45b6160De799E2C0

# API Key for lender (as mentioned in the contract specification)
LENDER_API_KEY=your_api_key_here

# Flask Application Configuration
SECRET_KEY=your_secret_key_here_change_in_production
FLASK_DEBUG=False
# For production, use PostgreSQL or MySQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname
# For development with SQLite, use an absolute path or leave commented to use default
# DATABASE_URL=sqlite:////absolute/path/to/instance/carpool.db

# Session Configuration
SESSION_COOKIE_SECURE=False

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password_or_app_password

# reCAPTCHA Configuration (optional, for bot protection)
RECAPTCHA_PUBLIC_KEY=your_recaptcha_site_key
RECAPTCHA_PRIVATE_KEY=your_recaptcha_secret_key

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name

# Deployment Configuration
PORT=5000
